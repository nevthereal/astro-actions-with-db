---
import { actions } from "astro:actions";
import { Registrars } from "astro:db";
import { db } from "astro:db";

const registrars = await db.select().from(Registrars)
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body class="w-screen h-screen flex flex-col">
		<div class="text-center m-auto">
			<h1 class="text-3xl font-bold tracking-tighter mb-4">Sign up for the newsletter!</h1>
			<form action={actions.register} method="post">
				<input placeholder="Email" type="email" name="email" required class="border rounded-2xl p-2">
				<button class="bg-sky-500 rounded-2xl p-2 font-bold">Submit!</button>
			</form>
		</div>
		<pre>
			{JSON.stringify(registrars)}
		</pre>
	</body>
</html>
